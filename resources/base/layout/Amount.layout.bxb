layout-macro-def (amount) {
  params {
    param (transfer) {
      type (Transfer)
      min (Required) max (One)
    }
  }
  content {
    section {
      title {
        template-macro (AmountLabel)
      }
      content {
        single-line {
          text {
            value ("#{value(transfer.transferAmount)}")
          }
        }
      }
    }
  }
}